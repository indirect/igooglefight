%div{:id => "fight_#{@fight.id}"}
  .toolbar
    %h1== Fight #{@fight.id}
    %a.fight.back{:href => "#"} Back
  %ul.rounded
    %li
      %a{:href => "#"}= @fight.query_1
      %small.counter=n @fight.count_1
    %li
      %a{:href => "#"}= @fight.query_2
      %small.counter=n @fight.count_2
  %h3.centered Winner
  %p.info.huge= @fight.winner
